[core]
  editor = nvim
  autocrlf = input
  pager = delta

[init]
  defaultBranch = main

[push]
  autoSetupRemote = true

[pull]
  rebase = true

[fetch]
  prune = true

[diff]
  colorMoved = default

[merge]
  conflictStyle = zdiff3

[interactive]
  diffFilter = delta --color-only

[delta]
  navigate = true
  side-by-side = true

[color "branch"]
  current  = magenta
  local    = default
  remote   = yellow
  upstream = green
  plain    = blue

[alias]
  unstage = reset HEAD --

[include]
  path = ~/.config/git/user.config
